


<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Клієнт</th>
      <th scope="col">Час</th>
      <th scope="col">Майстер</th>
    </tr>
  </thead>
 
<%clients_s = @clients.order "created_at DESC"%>
<%clients_s.each do |row|%>
<tbody>
    <tr>
      <th scope="row"><%=row['id']%></th>
      <td><%=row['name']%></td>
      <td><%=row['datestamp']%></td>
      <td style="background-color: <%=row['color']%>"><%=row['barber']%></td>
    </tr>
<%end%>
</tbody>
</table>


